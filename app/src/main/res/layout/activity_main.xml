<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coral.calculator.MainActivity">

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:layout_alignBaseline="@+id/one"
        android:layout_alignBottom="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:onClick="iniNumber"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/displayNumber"
        android:layout_alignEnd="@+id/mult" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:layout_below="@+id/two"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:onClick="iniNumber"
        />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:layout_alignBaseline="@+id/two"
        android:layout_alignBottom="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:onClick="iniNumber"
        />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/five"
        android:layout_alignBaseline="@+id/four"
        android:layout_alignBottom="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:onClick="iniNumber"
        />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/six"
        android:layout_alignBaseline="@+id/five"
        android:layout_alignBottom="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:onClick="iniNumber"
        />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seven"
        android:layout_below="@+id/four"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:onClick="iniNumber"
        />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eight"
        android:layout_alignBaseline="@+id/seven"
        android:layout_alignBottom="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:onClick="iniNumber"
        />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nine"
        android:layout_alignBaseline="@+id/eight"
        android:layout_alignBottom="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:onClick="iniNumber"
        />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ze"
        android:layout_below="@+id/seven"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:onClick="iniNumber"
        />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        android:minWidth="50dp"
        android:onClick="iniNumber"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/leftBrace"
        android:layout_alignParentStart="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mult"
        android:minWidth="50dp"
        android:onClick="iniNumber"
        android:layout_alignBaseline="@+id/minus"
        android:layout_alignBottom="@+id/minus"
        android:layout_toEndOf="@+id/minus" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:minWidth="50dp"
        android:layout_alignBaseline="@+id/mult"
        android:layout_alignBottom="@+id/mult"
        android:layout_centerHorizontal="true"
        android:onClick="iniNumber"/>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:minWidth="50dp"
        android:onClick="iniNumber"
        android:layout_alignBaseline="@+id/mult"
        android:layout_alignBottom="@+id/mult"
        android:layout_toEndOf="@+id/mult" />

    <Button
        android:id="@+id/rightBrace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:minWidth="50dp"
        android:onClick="iniNumber"
        android:text=")"
        android:layout_alignBaseline="@+id/leftBrace"
        android:layout_alignBottom="@+id/leftBrace"
        android:layout_toEndOf="@+id/leftBrace"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/leftBrace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ze"
        android:layout_marginTop="22dp"
        android:minWidth="50dp"
        android:onClick="iniNumber"
        android:text="("

        />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/displayNumber"
        android:layout_alignParentStart="true"
        android:onClick="iniNumber"

        />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        android:minWidth="50dp"
        android:layout_alignBaseline="@+id/divide"
        android:layout_alignBottom="@+id/divide"
        android:layout_alignEnd="@+id/nine"
        android:onClick="tokenizerAction"/>

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:onClick="clearAll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clear"
        android:layout_toEndOf="@+id/eight"
        android:layout_marginStart="11dp"
        android:id="@+id/operator" />

    <Button
        android:text="Replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dot"
        android:id="@+id/replay"
        android:layout_alignEnd="@+id/nine" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dot"
        android:onClick="iniNumber"
        android:layout_alignBaseline="@+id/ze"
        android:layout_alignBottom="@+id/ze"
        android:layout_toEndOf="@+id/ze" />

</RelativeLayout>
